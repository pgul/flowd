
prefix=@prefix@
COPT=-Wall -funsigned-char @DEFS@ -DCONFDIR=\"@sysconfdir@\" @CFLAGS@

all:	flowd

flowd:	flowd.o acl.o stat.o config.o getclass.o
	gcc $(COPT) -o flowd flowd.o acl.o stat.o config.o getclass.o @LIBS@
flowd.o:	flowd.c flowd.h
	gcc $(COPT) -o flowd.o -c flowd.c
acl.o:		acl.c flowd.h
	gcc $(COPT) -o acl.o -c acl.c
stat.o:		stat.c flowd.h
	gcc $(COPT) -o stat.o -c stat.c
config.o:	config.c flowd.h
	gcc $(COPT) -o config.o -c config.c
getclass.o:	getclass.c flowd.h
	gcc $(COPT) -o getclass.o -c getclass.c

testacl:	acl.c flowd.h
	gcc -g -Wall -DDEBUG=1 -o testacl -O2 -funsigned-char acl.c
test:		test.c
	gcc -g -Wall -o test -O2 -funsigned-char test.c -lpcap
